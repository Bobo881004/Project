    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shrinkColumns="0"
        android:stretchColumns="*">

        <TableRow>

            <ImageButton
                android:id="@+id/btn_ahri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#000000"
                app:srcCompat="@drawable/ahri" />

            <ImageButton
                android:id="@+id/btn_akali"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/akali" />

            <ImageButton
                android:id="@+id/btn_alistar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/alistar" />

            <ImageButton
                android:id="@+id/btn_amumu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/amumu" />


        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/name_ahri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:textColor="#FFFFFF"
                android:text="阿璃" />

            <TextView
